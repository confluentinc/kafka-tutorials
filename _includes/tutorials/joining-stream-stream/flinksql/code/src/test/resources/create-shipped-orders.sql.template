CREATE TABLE shipped_orders (
    order_id INT,
    order_ts VARCHAR, 
    total DOUBLE, 
    customer VARCHAR,
    ship_id VARCHAR,
    ship_ts VARCHAR,
    warehouse VARCHAR,
    hours_to_ship INT
) WITH (
    'connector' = 'kafka',
    'topic' = 'shipped_orders',
    'properties.bootstrap.servers' = 'localhost:KAFKA_PORT',
    'scan.startup.mode' = 'earliest-offset',
    'scan.bounded.mode' = 'latest-offset',
    'key.format' = 'raw',
    'key.fields' = 'ship_id',
    'value.format' = 'avro',
    'value.fields-include' = 'ALL'
);

